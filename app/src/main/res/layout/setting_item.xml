<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:descendantFocusability="blocksDescendants" >

    <CheckBox
        android:id="@+id/list_setting_item_checkbox"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="4dp" />

    <TextView
        android:id="@+id/list_setting_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_setting_item_checkbox"
        android:layout_toStartOf="@id/list_setting_item_checkbox"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="4dp"
        tools:text="Title" />

    <TextView
        android:id="@+id/list_setting_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_setting_item_checkbox"
        android:layout_toStartOf="@id/list_setting_item_checkbox"
        android:layout_below="@id/list_setting_item_title"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:padding="4dp"
        tools:text="detail" />

</RelativeLayout>