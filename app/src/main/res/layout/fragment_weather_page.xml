<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="25dp"
    android:paddingLeft="25dp"
    android:paddingEnd="5dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp" >

    <TextView
        android:id="@+id/page_week_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/page_text_1"
        android:textSize="@dimen/page_textSize_1"
        tools:text="Today" />

    <TextView
        android:id="@+id/page_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/page_textSize_2"
        tools:text="Nov 26" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/top_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/page_text_2"
                android:textSize="@dimen/top_textSize_l"
                tools:text="26°" />

            <TextView
                android:id="@+id/page_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textColor="@color/page_text_2"
                android:textSize="@dimen/top_textSize_m"
                tools:text="14°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp" >

            <ImageView
                android:id="@+id/page_weather_icon"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:srcCompat="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/page_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/page_text_2"
                android:textSize="@dimen/top_textSize_s"
                tools:text="Clouds" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/page_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/page_text_1"
        android:textSize="@dimen/page_textSize_1"
        tools:text="Humidity: 78%" />

    <TextView
        android:id="@+id/page_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/page_text_1"
        android:textSize="@dimen/page_textSize_1"
        tools:text="Pressure: 1018hPa" />

    <TextView
        android:id="@+id/page_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/page_text_1"
        android:textSize="@dimen/page_textSize_1"
        tools:text="Wind: 3 km/h SE" />

</LinearLayout>