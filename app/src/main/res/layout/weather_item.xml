<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="25dp"
    android:paddingRight="25dp" >

    <ImageView
        android:id="@+id/weather_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        tools:src="@drawable/ic_cloudy"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/weather_item_icon"
        android:layout_toRightOf="@+id/weather_item_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weather_item_weekdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/item_text_1"
                android:textSize="@dimen/weather_item_textSize_l"
                tools:text="Tomorrow" />

            <TextView
                android:id="@+id/weather_item_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/item_text_1"
                android:textSize="@dimen/weather_item_textSize_l"
                tools:text="20°" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weather_item_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/item_text_2"
                android:textSize="@dimen/weather_item_textSize_s"
                tools:text="Clouds" />

            <TextView
                android:id="@+id/weather_item_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/item_text_2"
                android:textSize="@dimen/weather_item_textSize_s"
                tools:text="10°" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>